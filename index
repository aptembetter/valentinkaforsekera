    <script>
        function openTab(evt, tabName) {
            // –°–∫—Ä—ã—Ç—å –≤—Å–µ —Å–æ–¥–µ—Ä–∂–∏–º–æ–µ –≤–∫–ª–∞–¥–æ–∫
            var i, tabcontent, tablinks;
            tabcontent = document.getElementsByClassName("tabcontent");
            for (i = 0; i < tabcontent.length; i++) {
                tabcontent[i].style.display = "none";
            }
            // –£–±—Ä–∞—Ç—å –∞–∫—Ç–∏–≤–Ω—ã–π –∫–ª–∞—Å—Å —Å–æ –≤—Å–µ—Ö –∫–Ω–æ–ø–æ–∫
            tablinks = document.getElementsByClassName("tablinks");
            for (i = 0; i < tablinks.length; i++) {
                tablinks[i].className = tablinks[i].className.replace(" active", "");
            }
            // –ü–æ–∫–∞–∑–∞—Ç—å –≤—ã–±—Ä–∞–Ω–Ω—É—é –≤–∫–ª–∞–¥–∫—É –∏ –¥–æ–±–∞–≤–∏—Ç—å –∞–∫—Ç–∏–≤–Ω—ã–π –∫–ª–∞—Å—Å –∫–Ω–æ–ø–∫–µ
            document.getElementById(tabName).style.display = "block";
            evt.currentTarget.className += " active";
        }

        // –ì–∞–ª–µ—Ä–µ—è —Ñ–æ—Ç–æ
        function openModal(img) {
            var modal = document.getElementById("photoModal");
            var modalImg = document.getElementById("modalImg");
            modal.style.display = "block";
            modalImg.src = img.src;
        }

        function closeModal() {
            document.getElementById("photoModal").style.display = "none";
        }

        // –ó–∞–∫—Ä—ã—Ç–∏–µ –º–æ–¥–∞–ª—å–Ω–æ–≥–æ –æ–∫–Ω–∞ –ø–æ –∫–ª–∏–∫—É –Ω–∞ —Ñ–æ–Ω
        window.onclick = function(event) {
            var modal = document.getElementById("photoModal");
            if (event.target == modal) {
                modal.style.display = "none";
            }
        }

        // –û—Ç–∫—Ä—ã—Ç—å –ø–µ—Ä–≤—É—é –≤–∫–ª–∞–¥–∫—É –ø–æ —É–º–æ–ª—á–∞–Ω–∏—é
        document.getElementsByClassName("tablinks")[0].click();
    // === –ú–£–ó–´–ö–ê–õ–¨–ù–´–ô –ü–õ–ï–ï–† ===
const audio = document.getElementById('backgroundMusic');
const playPauseBtn = document.getElementById('playPauseBtn');
const nextBtn = document.getElementById('nextBtn');
const volumeSlider = document.getElementById('volumeSlider');
const trackNameSpan = document.getElementById('trackName');

// –°–ø–∏—Å–æ–∫ —Ç—Ä–µ–∫–æ–≤
const tracks = [
    { src: 'music/1.mp3', title: '—Ç–µ–º–Ω—ã–π –ø—Ä—Ü–Ω' },
    { src: 'music/2.mp3', title: '–∫—ç–Ω—Ç—Ñ–∏–ª–º–∞—Ñ–µ–π—Å' },
    { src: 'music/3.mp3', title: '–º–∞–Ω–∏' }
];

let currentTrackIndex = 0;
let isPlaying = false;

// –ó–∞–≥—Ä—É–∑–∫–∞ —Ç—Ä–µ–∫–∞
function loadTrack(index) {
    const track = tracks[index];
    audio.src = track.src;
    trackNameSpan.textContent = track.title;
    audio.load();
}

loadTrack(currentTrackIndex);
audio.volume = 0.5;

// Play/Pause
playPauseBtn.addEventListener('click', () => {
    if (isPlaying) {
        audio.pause();
    } else {
        audio.play().catch(() => {});
    }
});

// –°–ª–µ–¥—É—é—â–∏–π —Ç—Ä–µ–∫
nextBtn.addEventListener('click', () => {
    currentTrackIndex = (currentTrackIndex + 1) % tracks.length;
    loadTrack(currentTrackIndex);
    if (isPlaying) {
        audio.play().catch(() => {});
    }
});

// –û–±–Ω–æ–≤–ª–µ–Ω–∏–µ –∫–Ω–æ–ø–∫–∏ –ø—Ä–∏ play/pause
audio.addEventListener('play', () => {
    isPlaying = true;
    playPauseBtn.textContent = '‚è∏';
});

audio.addEventListener('pause', () => {
    isPlaying = false;
    playPauseBtn.textContent = '‚ñ∂';
});

// –ì—Ä–æ–º–∫–æ—Å—Ç—å (0.0‚Äì1.0)
volumeSlider.addEventListener('input', () => {
    audio.volume = volumeSlider.value; // –∑–Ω–∞—á–µ–Ω–∏–µ range —Å—Ä–∞–∑—É –ø–æ–¥—Ö–æ–¥–∏—Ç –∫–∞–∫ volume[web:49][web:51][web:52]
});

// –ê–≤—Ç–æ–∑–∞–ø—É—Å–∫ –ø–æ—Å–ª–µ –ø–µ—Ä–≤–æ–≥–æ –∫–ª–∏–∫–∞ –ø–æ —Å—Ç—Ä–∞–Ω–∏—Ü–µ (–µ—Å–ª–∏ –Ω—É–∂–Ω–æ)
document.addEventListener('click', () => {
    if (!isPlaying && audio.paused) {
        audio.play().catch(() => {});
    }
}, { once: true });
    </script>
